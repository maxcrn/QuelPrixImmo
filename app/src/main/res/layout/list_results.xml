<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellowQPI"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/ic_vente" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prixTypeVente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100000€ / Vente"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateVente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10/11/2017" />

            <TextView
                android:id="@+id/adresseVente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13 Rue des Gravieres"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/surfaceVente1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="64 m²"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:translationX="5dip" />

                <TextView
                    android:id="@+id/batPieceVente1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Appartement / 3 pièces"
                    android:translationX="5dip" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>